{
  "version": "1.0.0-*",
  "testRunner": "xunit",
  "buildOptions": {
    "emitEntryPoint": true,
    "copyToOutput": [
      "SubsetOfTests.xunit.runner.json"
    ],
    "compile": {
      "includeFiles": [
        "../Tester/SerializationTests/DeepCopyTests.cs",
        "../Tester/SerializationTests/SerializationOrderTests.cs",
        "../Tester/SerializationTests/SerializationTests.DifferentTypes.cs",
        "../Tester/SerializationTests/SerializationTests.JsonTypes.cs",
        "../TesterInternal/Serialization/BuiltInSerializerTests.cs",
        "../TesterInternal/Serialization/SerializerGenerationTests.cs",
        "../TesterInternal/SerializerTests/CustomSerializerTests.cs",
        "../TesterInternal/SerializerTests/MessageSerializerTests.cs"
      ]
    }
  },
  "runtimes": {
    "win7-x64": {}
  },

  "dependencies": {
    "Orleans": { "target": "project" },
    "TestExtensions": { "target": "project" },
    "TestGrainInterfaces": { "target": "project" },
    "xunit": "2.2.0-beta2-build3300",
    "dotnet-test-xunit": "2.2.0-preview2-build1029"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "buildOptions": {
        "define": [ "NETSTANDARD", "NETCORE_SUBSET" ]
      },
      "dependencies": {
        "Microsoft.NETCore.App": "1.0.0"
      },
      "imports": [
        "dnxcore50",
        "portable-net45+win8"
      ]
    },
    "net451": {
      "buildOptions": {
      },
      "dependencies": {
        "OrleansTestingHost": { "target": "project" },
        "TestInternalGrains": { "target": "project" },
        "TestGrains": { "target": "project" }
      }
    }
  }
}
